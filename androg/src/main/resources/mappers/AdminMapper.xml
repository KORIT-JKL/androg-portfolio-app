<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.androg.androg.repository.AdminRepository">
	

	<resultMap type="com.korit.androg.androg.entity.Color" id="colorMap">
		<id property="colorId" column="color_id"/>
		<result property="colorName" column="color_name"/>
	</resultMap>
	
	<resultMap type="com.korit.androg.androg.entity.Category" id="categoryMap">
		<id property="categoryId" column="category_id"/>
		<result property="categoryName" column="category_name"/>
	</resultMap>
	
	<resultMap type="com.korit.androg.androg.entity.Products" id="productsMap">
		<id property="productId" column="product_id"/>
		<result property="productName" column="product_name"/>
		<result property="productPrice" column="product_Price"/>
		<result property="productImg" column="product_img"/>
		<result property="sizeS" column="size_s"/>
		<result property="sizeM" column="size_m"/>
		<result property="sizeL" column="size_l"/>
		<result property="sizeXL" column="size_xl"/>
		<result property="sizeXXL" column="size_xxl"/>
		<result property="soldoutFlag" column="soldout_flag" />
		<association property="category" resultMap="categoryMap"></association>
		<association property="color" resultMap="colorMap"></association>
	</resultMap>

	<resultMap type="com.korit.androg.androg.dto.admin.getReviewsRespDto" id="reviewMap">
		<id property="reviewId" column="review_id"/>
		<result property="name" column="name"/>
		<result property="productName" column="product_name"/>
		<result property="content" column="content"/>
		<result property="date" column="review_date"/>
	</resultMap>
	
	<resultMap type="com.korit.androg.androg.dto.admin.PopUpRespDto" id="popUpMap">
		<id property="popUpId" column="popup_id"/>
		<result property="content" column="content"/>
	</resultMap>
	
	<resultMap type="com.korit.androg.androg.entity.Notice" id="noticeMap">
		<id property="noticeId" column="notice_id"/>
		<result property="subject" column="subject"/>
		<result property="content" column="content"/>
	</resultMap>
	
	<select id="getColors" resultType="list" resultMap="colorMap">
		SELECT 
			color_id,
			color_name 
		FROM 
			androg.color_tb;
	</select>

	<insert id="registerProductDetail">
		<if test="categoryId == 1 || categoryId == 2 || categoryId == 3 || categoryId == 4" >
			insert into product_tb
			values(0 , #{productName}, #{productPrice}, #{categoryId} ,#{productImg},"S","M","L","XL","XXL",#{colorId},1)
		</if>
		<if test="categoryId == 5 " >
			insert into product_tb
			values(0 , #{productName}, #{productPrice}, #{categoryId} ,#{productImg},"ONESIZE",NULL,NULL,NULL,NULL,#{colorId},1)
		</if>
		<if test="categoryId == 6" >
			insert into product_tb
			values(0 , #{productName}, #{productPrice}, #{categoryId} ,#{productImg},240,250,260,270,280,#{colorId},1)
		</if>
	</insert>
	<select id="getProducts" parameterType="Integer" resultMap="productsMap">
		SELECT
			pt.product_id,
            pt.product_name,
            pt.product_price,
            pt.product_img,
            pt.size_s,
            pt.size_m,
            pt.size_l,
            pt.size_xl,
            pt.size_xxl,
			ct.category_id,
            ct.category_name,
            clt.color_id,
            clt.color_name,
            pt.soldout_flag
		FROM
			product_tb pt
            left outer join category_tb ct on(ct.category_id = pt.category_id)
            left outer join color_tb clt on(clt.color_id = pt.color_id)
		where
			 pt.category_id = #{categoryId}
	</select>
	<update id="productModify" >
		update 
			product_tb
		set 
			product_name = #{productName},
			product_Price = #{productPrice},
			category_id = #{categoryId},
			product_img = #{productImg},
			color_id = #{colorId}
		where 
			product_id= #{productId};
	</update>
	<delete id="productDelte" parameterType="Integer">
		delete from product_tb
		where product_id = #{productId};
	</delete>
	<update id="modifySodlout" parameterType="Integer">
		update
			product_tb
		set
			soldout_flag = #{soldoutFlag}
		where
			product_id = #{productId};
	</update>
	
	
	
	<insert id="popUpRegister">
		insert into popup_tb
		values(1,#{content});
	</insert>
	<select id="getPopUpList" resultMap="popUpMap">
		select
			*
		from popup_tb;
	</select>
	
	<update id="popUpModify" >
		update popup_tb
			set content = #{content}
		where
			popup_id = 1
	
	</update>
	
	<delete id="popDelete" parameterType="Integer">
		delete from popup_tb
		where
			popup_id = #{popUpId};
	</delete>
	
	<insert id="noticeRegister" parameterType="hashmap">
	insert into notice_tb
	values(1,#{subject},#{content},CURDATE())
	</insert>
	<select id="getNotice" resultMap="noticeMap">
	select
		notice_id,
		subject,
		content
	from
		notice_tb
	</select>
	
	<select id="getReviews" resultType="List" resultMap="reviewMap">
		select
			rt.review_id,
		    pt.product_name,
			ut.name,
		    rt.content,
		    rt.review_date
		FROM
			review_tb rt
		    left outer join order_detail_tb odt on(odt.order_detail_id = rt.order_detail_id)
            left outer join product_tb pt on (odt.product_id = pt.product_id)
            left outer join order_tb ot on (ot.order_id = odt.order_id)
            left outer join user_tb ut on(ut.user_id = ot.user_id)
		order by
			rt.review_date desc;
	</select>
	<delete id="delteReivews" parameterType="Integer">
		delete from review_tb
		where review_id = #{reviewsId};
	</delete>
</mapper>